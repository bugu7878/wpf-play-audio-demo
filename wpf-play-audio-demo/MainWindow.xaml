<Window x:Class="wpf_play_audio_demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_play_audio_demo"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="从本地文件夹中选中文件播放" Click="PlayMusicByLocal"></Button>
        <Button Grid.Row="1" Content="从 HTTP 链接播放音乐" Click="PlayMusicByHttp"></Button>
    </Grid>
</Window>